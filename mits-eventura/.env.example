# Database Configuration
MONGODB_URI=mongodb://localhost:27017/mits-eventura
MONGODB_TEST_URI=mongodb://localhost:27017/mits-eventura-test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Client Configuration
VITE_API_URL=http://localhost:5000/api
VITE_APP_NAME=MITS Eventura

# Email Configuration (for certificate delivery and notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Certificate Configuration
CERT_TEMPLATE_PATH=./templates/certificate-template.html
CERT_OUTPUT_PATH=./certificates

# Admin Configuration
ADMIN_EMAIL=admin@mitseventura.com
ADMIN_PASSWORD=SecurePassword123!

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:5173